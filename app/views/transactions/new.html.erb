    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
      <div class="col-md-6 col-xs-12">

        <div class="input-group">
          <%= form_tag(search_transactions_path, :method => "get", remote: true) do %>
            <%= select_tag :search, options_for_select(@tenants), id: "transaction_search", class: "chosen-select" %>
           <%= submit_tag "Search" %>
          <% end %>
        </div>

        <form class="form-horizontal form-label-left input_mask">
          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Account No.</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" disabled="disabled" placeholder="Account No." id="trans-account-no">
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12"> Date </label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" disabled="disabled"  placeholder=" Date" id="trans-date">
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Full Names </label>
              <div class="col-md-7 col-sm-7 col-xs-12">
                <input type="text" class="form-control"  disabled="disabled" placeholder="full names" id="trans-full-name" >
              </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Plot.</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" disabled="disabled"  placeholder="plot" id="trans-plot" >
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Unit Name:</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" disabled="disabled"  placeholder="unit" id="trans-unit-name">
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Rent Payable:</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" disabled="disabled"  placeholder="Rent Payable" id="trans-rent-payable" >
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Current Month:</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" disabled="disabled"  placeholder="Current Month" id="trans-current-month" >
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Arrears/Over pay: <span class="required">*</span></label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input class="date-picker form-control col-md-7 col-xs-12" disabled="disabled" required="required" type="text" id="trans-arrears" >
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Total:</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input type="text" class="form-control" disabled="disabled"  placeholder="Total" id="trans-total">
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Last Payment <span class="required">*</span>
            </label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input class="date-picker form-control col-md-7 col-xs-12" disabled="disabled" required="required" type="last payment" id="trans-last-payment" >
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Late Fee Penalty <span class="required">*</span>
            </label>
            <div class="col-md-7 col-sm-7 col-xs-12">
              <input class="date-picker form-control col-md-7 col-xs-12" required="required" disabled="disabled" type="last payment date" id="trans-late-fee" >
            </div>
          </div>
          <div class="ln_solid"></div>
        </form>
      </div>

      <div class="col-md-6 col-xs-12">
        <form class="form-horizontal form-label-left input_mask">
          <div class="form-group">
            <label class="control-label col-md-4 col-sm-4 col-xs-12"> Amount </label>
