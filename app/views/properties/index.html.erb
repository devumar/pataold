
<div class="table-responsive">    
    <table id="properties" class=".table table-striped table-bordered">
      <thead>
        <tr>
           <th>Account No.</th>
          <th>Landlord</th>
          <th>Plot No.</th>
          <th>Estate</th>
          <th>Group</th>
          <th>Edit</th>
          <th>Add House</th> 
          <th>Show</th>
        </tr>
      </thead>
      <tbody>
        <% @properties.each do |p| %>
            <tr>
          <td></td>
          <td><%= p.landlord.fname %></td>    
          <td><%= p.plot_no %></td>
          <td><%= p.estate %></td>
          <td><%= p.field_officer %></td>
          <td><%= link_to 'Edit', edit_property_path(p), method: :get %></td>
          <td><%= link_to 'Add House', new_house_path(id: p.id), method: :get %></td>
          <td><%= link_to 'Show', property_path(p), method: :get %></td>                    
         <% end %> 
      </tbody> 
    </table>
</div>

<script>
$(document).ready(function() {
$('#properties').dataTable(); 
bjQueryUI: true
} );
</script>